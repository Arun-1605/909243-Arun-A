<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p-0 m-0">
    <div class="navbar navbar-expand-lg bg-dark navbar-dark">
        
                <a href="#" class="navbar-brand">ECART</a>

                <ul class="nav navbar-nav">
                    @if (HttpContext.Current.Session["IsAuthenticated"] != null)
                    {
                        <li class="nav-item">@Html.ActionLink("Products Catalog", "Index", "Products", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("My Cart", "Items", "Cart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</li>
                    }

                </ul>

        </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
